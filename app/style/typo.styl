// Font sizes
.big
    font-size: 1.5rem

.bigger
    font-size: 2rem

.large
    font-size: 3rem

.text-center
    text-align: center

.text-uppercase
    text-transform: uppercase

// Fonts
specialfont()
    font-family: 'BrandonThin'
    font-weight: 100

@font-face {
    font-family: 'Brandon';
    src: url('style/fonts/brandon-reg-webfont.ttf');
         url('style/fonts/brandon-reg-webfont.eot');
    font-weight: normal;
    font-style: italic;
}

@font-face {
    font-family: 'BrandonThin';
    src: url('style/fonts/brandon-thin-webfont.ttf');
         url('style/fonts/brandon-thin-webfont.eot');
    font-weight: normal;
    font-style: italic;
}
